{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",   // Use the new JSX Transform from React 17+
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",  // Include JavaScript files
    "**/*.jsx", // Include JSX files
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
